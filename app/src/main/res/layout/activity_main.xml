<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="left"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/img_card_view"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/img_card_view" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_gravity="bottom"
      android:background="@color/card_view_price_holder_background"
      android:layout_height="@dimen/card_view_price_holder_height">

      <TextView
            android:id="@+id/info_text"
            android:gravity="center"
          android:layout_gravity="center"
            android:text="@string/price_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

  </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--TODO remove-->
    <View
        android:layout_width="15dp"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_2"
        android:layout_gravity="left"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/img_card_view"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/img_card_view_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/card_view_price_holder_background"
            android:layout_height="@dimen/card_view_price_holder_height">

            <TextView
                android:id="@+id/info_text_2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/price_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
