<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/wood_more_contrast"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.project.monica.snobsinenobilitate.activities.ProductDetailActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_detail_title"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/product_detail_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/card_view_price_text_size"
                    android:textColor="@android:color/white"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/product_detail_img"
                android:layout_width="match_parent"
                android:src="@drawable/img_card_view"
                android:elevation="@dimen/card_view_elevation"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />


            <!-- Card View Colors - tmp static-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:elevation="@dimen/card_view_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/card_view_colors"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/dark_grey"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/product_detail_colors_text"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content">


                        <Button
                            android:background="@drawable/white_solid_shape"
                            style="@style/ButtonStyle" />


                        <Button
                            style="@style/ButtonStyle"
                            android:background="@drawable/green_solid_shape"
                             />

                        <Button
                            style="@style/ButtonStyle"
                            android:background="@drawable/cream_solid_shape"
                             />

                        <Button
                            style="@style/ButtonStyle"
                            android:background="@drawable/red_solid_shape"
                            />

                        <Button
                            style="@style/ButtonStyle"
                            android:background="@drawable/blue_solid_shape"
                             />


                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!-- Card View Size - tmp static -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:elevation="@dimen/card_view_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/dark_grey"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/product_detail_size_text"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content">


                        <Button
                            style="@style/ButtonStyle"
                            android:textColor="@android:color/white"
                            android:text="S"
                            android:background="@android:color/transparent"
                            android:textStyle="bold"
                             />


                        <Button
                            style="@style/ButtonStyle"
                            android:background="@android:color/transparent"
                            android:text="M" />

                        <Button
                            style="@style/ButtonStyle"
                            android:background="@drawable/grey_solid_shape"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="L" />

                        <Button
                            style="@style/ButtonStyle"
                            android:text="XL"
                            android:background="@android:color/transparent"
                             />


                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:elevation="@dimen/card_view_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
                    android:background="@color/dark_grey"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/product_detail_description_title"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="@string/product_detail_description"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/product_detail_save_button"
                    android:layout_width="@dimen/button_larger_diameter_size"
                    android:background="@drawable/grey_solid_shape"
                    android:gravity="center"
                    android:text="@string/product_detail_save_text"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_bigger"
                    android:layout_height="@dimen/button_larger_diameter_size" />

                <Button
                    android:id="@+id/product_detail_buy_button"
                    android:layout_width="@dimen/button_larger_diameter_size"
                    android:background="@drawable/grey_solid_shape"
                    android:text="@string/product_detail_buy_text"
                    android:gravity="center"
                    android:layout_height="@dimen/button_larger_diameter_size" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>